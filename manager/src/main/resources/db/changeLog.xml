<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1" author="jerome">
        <createTable tableName="profile">
            <column name="id" type="varchar(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="version" type="bigint"/>
            <column name="username" type="varchar"/>
            <column name="fullname" type="varchar"/>
            <column name="email" type="varchar"/>
        </createTable>
        <addUniqueConstraint columnNames="username"
                             constraintName="const_username"
                             tableName="profile"/>

        <createTable tableName="app">
            <column name="id" type="varchar(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="owner" type="varchar"/>
            <column name="name" type="varchar"/>
            <column name="creationdate" type="bigint"/>
            <column name="status" type="varchar"/>
            <column name="type" type="varchar"/>
        </createTable>

        <createTable tableName="env">
            <column name="id" type="varchar(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="app" type="varchar(50)"/>
        </createTable>

        <createTable tableName="env_entries">
            <column name="env_id" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="env_key" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="payload" type="clob"/>
            <column name="payloadtype" type="varchar"/>
            <column name="env_secret" type="boolean"/>
        </createTable>
        <addPrimaryKey tableName="env_entries"
                       columnNames="env_id,env_key"
                       constraintName="pk_env_entries"/>

        <addForeignKeyConstraint baseTableName="env_entries"
                                 baseColumnNames="env_id"
                                 referencedTableName="env"
                                 referencedColumnNames="id"
                                 constraintName="fk_env_entries"
                                 onDelete="CASCADE"/>

        <createTable tableName="proc">
            <column name="id" type="varchar(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="owner" type="varchar"/>
            <column name="appid" type="varchar(50)"/>
            <column name="name" type="varchar"/>
            <column name="tasks" type="varchar(5000)"/>
            <column name="context" type="clob"/>
            <column name="log" type="clob"/>
            <column name="status" type="varchar"/>
            <column name="nexttaskid" type="varchar"/>
            <column name="runningtaskjobid" type="varchar"/>
            <column name="creationdate" type="bigint"/>
            <column name="startdate" type="bigint"/>
            <column name="enddate" type="bigint"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
